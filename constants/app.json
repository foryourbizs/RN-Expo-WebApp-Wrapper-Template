{
  "$schema": "./schemas/app.schema.json",
  "webview": {
    "baseUrl": "https://laravel-app-production-9cb3.up.railway.app/app",
    "userAgent": "Mozilla/5.0 (Linux; Android 13) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Mobile Safari/537.36"
  },
  "security": {
    "allowedOrigins": [],
    "allowInsecureHttp": false,
    "debug": false
  },
  "offline": {
    "enabled": true,
    "title": "오프라인 상태입니다.",
    "message": "인터넷을 연결해 주세요.",
    "retryButtonText": "다시 시도",
    "autoReconnect": true
  },
  "statusBar": {
    "visible": true,
    "style": "auto",
    "translucent": true,
    "overlapsWebView": true,
    "showOverlay": true
  },
  "navigationBar": {
    "visibility": "hidden",
    "buttonStyle": "dark",
    "backgroundColor": "#ffffff",
    "behavior": "overlay-swipe"
  },
  "splash": {
    "enabled": true,
    "loadingText": "로딩 중...",
    "logoImage": null,
    "mode": "image",
    "fullscreenImage": "./assets/images/splash-icon.png"
  },
  "safeArea": {
    "enabled": true,
    "edges": "all"
  },
  "debug": {
    "enabled": false
  }
}
