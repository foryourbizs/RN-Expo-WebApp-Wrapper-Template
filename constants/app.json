{
  "$schema": "./schemas/app.schema.json",
  "webview": {
    "baseUrl": "https://laravel-app-production-9cb3.up.railway.app",
    "userAgent": "dev"
  },
  "security": {
    "allowedOrigins": [
      "https://laravel-app-production-9cb3.up.railway.app"
    ]
  },
  "offline": {
    "enabled": true,
    "title": "오프라인 상태입니다.",
    "message": "인터넷을 연결해 주세요.",
    "retryButtonText": "",
    "autoReconnect": true
  },
  "statusBar": {
    "visible": true,
    "style": "auto",
    "translucent": true,
    "overlapsWebView": true,
    "showOverlay": true
  },
  "navigationBar": {
    "visibility": "hidden",
    "buttonStyle": "dark",
    "backgroundColor": "#ffffff",
    "behavior": "overlay-swipe"
  },
  "splash": {
    "enabled": true,
    "loadingText": "스플레시 이미지",
    "logoImage": null,
    "mode": "image",
    "fullscreenImage": "./assets/images/splash-icon.png"
  },
  "safeArea": {
    "enabled": true,
    "edges": "all"
  },
  "debug": {
    "enabled": false
  }
}
